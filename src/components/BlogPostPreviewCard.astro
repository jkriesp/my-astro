---
const { title, description, heroImage, postUrl } = Astro.props;
---

<style>
  .card {
    flex: 1 0 20%;
    width: 300px;
    margin: 1em;
    padding: 20px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
  }

  .card:hover {
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
  }

  .card img {
    width: 100%;
    height: auto;
  }
</style>

<div class="card">
  <img src={heroImage} alt={description} />
  <h3>{title}</h3>
  <p>{description}</p>
  <a href={`/blog/${postUrl}/`}>Read More</a>
</div>
