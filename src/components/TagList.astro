---
interface Props {
    tags: string[];
    className?: string;
}

const { tags, className = '' } = Astro.props;
---
<div class:list={['tag-list', className]}>
    {tags.map((tag) => (
        <a href={`/tags/${tag}`} class="tag">#{tag}</a>
    ))}
</div>

<style>
    .tag-list {
        @apply flex flex-wrap gap-2;
    }
    .tag {
        @apply inline-block px-3 py-1 rounded-full text-sm transition-colors;
        @apply bg-gray-100 text-gray-600 hover:bg-gray-200 hover:text-gray-800;
    }
    :global([data-theme="dark"]) .tag {
        @apply bg-gray-700 text-gray-300 hover:bg-gray-600 hover:text-gray-100;
    }
</style>