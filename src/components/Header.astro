---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a href="/" class="site-title">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="right-section">
      <ThemeToggle />
      <div class="social-links">
        <a href="https://github.com/jkriesp" target="_blank" class="github-link">
          <span class="sr-only">Go to Jenske's GitHub repo</span>
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" class="github-icon"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg>
        </a>
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    @apply m-0 px-4 py-0 bg-white dark:bg-gray-800 shadow-sm;
  }
  h2 {
    @apply m-0 text-base;
  }
  h2 a,
  h2 a.active {
    @apply no-underline text-gray-800 dark:text-gray-100;
  }
  .site-title {
    @apply relative inline-block;
    transition: transform 0.2s ease;
  }
  .site-title:hover {
    transform: scale(1.05);
  }
  .site-title:active {
    transform: scale(0.95);
  }
  nav {
    @apply flex items-center justify-between;
  }
  nav a {
    @apply py-4 px-2 text-gray-600 dark:text-gray-300 border-b-4 border-transparent;
    text-decoration: none;
  }
  nav a.active {
    @apply no-underline border-blue-500 dark:border-blue-600;
  }
  .right-section {
    @apply flex items-center gap-2;
  }
  .social-links,
  .social-links a {
    @apply flex text-gray-600 dark:text-gray-300;
  }
  
  .github-link {
    position: relative;
    transition: transform 0.3s ease;
  }
  
  .github-link:hover {
    transform: rotate(5deg);
  }
  
  .github-icon {
    transition: all 0.3s ease;
  }
  
  .github-link:hover .github-icon {
    filter: drop-shadow(0 0 3px currentColor);
  }
  
  @media (max-width: 720px) {
    .social-links {
      @apply hidden;
    }
    .right-section {
      @apply gap-0;
    }
  }
</style>

<script>
  // Add subtle animation to header links
  const headerLinks = document.querySelectorAll('.internal-links a');
  
  headerLinks.forEach(link => {
    link.addEventListener('mouseenter', (e) => {
      if (!link.classList.contains('active')) {
        (link as HTMLElement).style.transition = 'transform 0.2s ease-out';
        (link as HTMLElement).style.transform = 'translateY(-2px)';
      }
    });
    
    link.addEventListener('mouseleave', (e) => {
      (link as HTMLElement).style.transform = 'translateY(0)';
    });
  });
</script>
