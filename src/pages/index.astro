---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import LatestBlogPosts from "../components/LatestBlogPosts.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero-section">
        <div class="gradient-orb gradient-orb-1"></div>
        <div class="gradient-orb gradient-orb-2"></div>
        <div class="gradient-orb gradient-orb-3"></div>

        <div class="hero-content">
          <h1 class="animated-title">
            <span class="gradient-text">Jens Kristian Espevik</span>
          </h1>

          <p class="intro-paragraph">
            Software developer. I write about what I'm learning, building, and figuring out as I go.
          </p>
        </div>

        <h2 class="section-title">Recent Topics</h2>

        <ul class="feature-list">
          <li class="feature-item">Web development and modern frameworks</li>
          <li class="feature-item">Cloud architecture and DevOps practices</li>
          <li class="feature-item">Side projects and experiments</li>
          <li class="feature-item">Tools and workflows that actually work</li>
        </ul>

        <p class="outro-text">
          Built with Astro. Thoughts and opinions are my own.
        </p>
      
      </section>
      <section class="blog-section">
        <h2 class="section-title">Latest Posts</h2>
        <LatestBlogPosts />
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero-section {
    @apply mb-8 p-8 rounded-2xl;
    position: relative;
    overflow: hidden;
    background: var(--background-tertiary);
    border: 1px solid var(--border);
    min-height: 400px;
  }

  /* Floating gradient orbs */
  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.6;
    pointer-events: none;
    z-index: 0;
  }

  .gradient-orb-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, var(--accent-primary) 0%, transparent 70%);
    top: -100px;
    right: -100px;
    animation: float 20s ease-in-out infinite;
  }

  .gradient-orb-2 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, var(--accent-tertiary) 0%, transparent 70%);
    bottom: -80px;
    left: -80px;
    animation: float 15s ease-in-out infinite reverse;
  }

  .gradient-orb-3 {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, var(--accent-secondary) 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: pulse 10s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.5;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0.7;
    }
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .blog-section {
    @apply mb-8;
  }

  .animated-title {
    @apply relative;
    font-size: 3.5rem;
    line-height: 1.1;
  }

  /* Animated gradient text */
  .gradient-text {
    background: linear-gradient(
      120deg,
      var(--accent-primary),
      var(--accent-tertiary),
      var(--accent-secondary),
      var(--accent-primary)
    );
    background-size: 200% auto;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradientShift 4s ease infinite;
    font-weight: 700;
    display: inline-block;
  }

  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% center;
    }
    50% {
      background-position: 100% center;
    }
  }

  .rocket-emoji {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .animated-title:hover .rocket-emoji {
    animation: gentleRocketLift 0.6s ease-in-out;
    transform-origin: center;
  }

  @keyframes gentleRocketLift {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-6px) rotate(3deg); }
  }

  @media (max-width: 768px) {
    .animated-title {
      font-size: 2.5rem;
    }

    .gradient-orb {
      filter: blur(40px);
    }
  }

  .name-highlight {
    position: relative;
    padding: 0 2px;
  }

  .name-highlight::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, var(--accent-primary), var(--accent-secondary));
    transition: width 0.4s ease;
  }

  .name-highlight:hover::after {
    width: 100%;
  }

  .intro-paragraph, .outro-text {
    @apply my-6;
  }

  .section-title {
    @apply my-4 pb-2;
    border-bottom: 1px solid var(--border);
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 50px;
    height: 3px;
    background: linear-gradient(to right, var(--accent-primary), var(--accent-tertiary));
    transition: width 0.4s ease;
  }

  .section-title:hover::after {
    width: 120px;
  }

  .feature-list {
    @apply pl-5;
  }

  .feature-item {
    @apply my-3;
    position: relative;
  }

  .feature-item::before {
    content: 'â€¢';
    position: absolute;
    left: -20px;
    color: var(--accent-secondary);
  }
</style>
